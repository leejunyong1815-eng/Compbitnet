{
  "train_micro_batch_size_per_gpu": 3,
  "gradient_accumulation_steps": 86,
  "train_batch_size": 1032,
  "steps_per_print": 10,
  "gradient_clipping": 1.0,
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 6e-4,
      "betas": [0.9, 0.98],
      "eps": 1e-8,
      "weight_decay": 0.01
    }
  },
  "scheduler": {
    "type": "WarmupDecayLR",
    "params": {
